{
  "AWSEBDockerrunVersion": "2",
  "volumes": {
    "name": "data",
    "host": {
      "sourcePath": "/var/app/data"
    },
    "name": "logs",
    "host": {
      "sourcePath": "/var/app/logs"
    }
  },
  "containerDefinitions": [{
    "name": "mongodb",
    "image": "mongo",
    "essential": true,
    "portMappings": [{
      "hostPort": 27017,
      "containerPort": 27017
    }],
    "mountPoints": [{
      "sourceVolume": "data",
      "containerPath": "/data"
    }, {
      "sourceVolume": "logs",
      "containerPath": "/var/logs/mongodb"
    }]
  }]
}
